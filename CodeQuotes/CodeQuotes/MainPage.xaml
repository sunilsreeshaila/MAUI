        <Grid Margin="25" RowDefinitions="0.8*, 0.2*">
            <Label x:Name="lblQuote"
                   FontSize="50"
                   HorizontalTextAlignment="Center"
                   Text="They don't make any bugs like Bunny anymore - Olav Mjelde"
                   TextColor="White"
                   VerticalOptions="Center"
                   FontFamily="MainFont"/>
            <Button x:Name="btnGenerateQuote"
                    Grid.Row="1"
                    BackgroundColor="Black"
                    Opacity="0.4"
                    Text="Get New Quote"
                    Clicked="btnGenerateQuote_Clicked"/>
